<div class="mdl-cell--12-col mdl-grid">
    <div class="mdl-layout-spacer"></div>
    <div class="mdl-cell--8-col mdl-grid">
        <h1>
            DNS Providers Comparison Tool
        </h1>
            <div class="mdl-cell--12-col mdl-grid">
            <div class="mdl-layout-spacer"></div>
            {{#each records}}
                <div class="mdl-cell--1-col mdl-cell left2">
                    {{this}}
                    <label class="mdl-switch mdl-js-switch mdl-js-ripple-effect" for="switch-{{this}}">
                        <input type="checkbox" id="switch-{{this}}" class="mdl-switch__input filter_toggle" data-type="{{this}}">
                    </label>
                </div>
            {{/each}}
            <div class="mdl-layout-spacer"></div>
            </div>
        <table class="mdl-data-table mdl-js-data-table mdl-cell--12-col">
            <tr>
                <th></th>
                <th>Provider</th>
                {{#each records}}
                    <th>{{this}}</th>
                {{/each}}
            </tr>
            {{#each providers}}
                <tr onclick="window.location = '{{url}}'">
                    <td><img src="{{icon}}" class="favicon"/></td>
                    <td>{{@key}}</td>
                    {{#each ../records}}
                        <td>
                            {{check (contains this ../records)}}
                        </td>
                    {{/each}}
                </tr>
            {{else}}
                <tr>
                    <td colspan="100%" class="no-providers">
                        No providers found
                    </td>
                </tr>
            {{/each}}

        </table>
    </div>
    <div class="mdl-layout-spacer"></div>
</div>
